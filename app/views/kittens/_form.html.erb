<%= form_with model: @kitten, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>

  <%= f.label :age %>
  <%= f.number_field :age, min: 0 %><br/>

  <%= f.label :cuteness %>
  <%= f.select :cuteness, options_for_select(1..10, @kitten.cuteness)%><br/>

  <%= f.label :softness %>
  <%= f.select :softness, options_for_select(1..10, @kitten.softness) %><br/>

  <%= f.submit %>
<% end %>